<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/tourist_pic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:scaleType="centerCrop"
                app:riv_corner_radius_top_left="20dp"
                app:riv_corner_radius_top_right="20dp"
                android:src="@drawable/airplane"
                app:riv_border_color="#333333"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/area_name"
                    android:textColor="#323232"
                    android:textSize="14dp"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily=""
                    android:text="Area"/>
                <TextView
                    android:id="@+id/sigungu_name"
                    android:textColor="#323232"
                    android:layout_width="60dp"
                    android:textSize="14dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily=""
                    android:text="sigungu"/>
                <TextView
                    android:id="@+id/tourspot_name"
                    android:textColor="#323232"
                    android:layout_width="180dp"
                    android:textSize="14dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:fontFamily=""
                    android:text="tour_spot"/>

                <ToggleButton
                    android:id="@+id/likebutton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/likeoff"
                    android:focusable="false"
                    android:layout_gravity="right"
                    android:focusableInTouchMode="false"
                    android:text="toggleButton"
                    android:textOff=" "
                    android:textOn=" " />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp">
                <TextView
                    android:id="@+id/countlike"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="like수"
                    android:textSize="14dp"
                    android:textColor="#323232"
                    android:fontFamily="@font/applesdgothicneob"
                    android:gravity="right"></TextView>

            </LinearLayout>
            <!--2022.05.15마지막 -->
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
