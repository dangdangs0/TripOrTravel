<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:textSize="20dp"
    style="?android:attr/spinnerItemStyle"
    android:gravity="center_vertical">

    <!--app:layout_constraintStart_toEndOf="@+id/imageView_thumb"
        app:layout_constraintTop_toTopOf="@+id/imageView_thumb"-->



    <TextView
        android:id="@+id/textView_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/applesdgothicneom"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginRight="10dp"
        android:focusable="false"/>

    <TextView
        android:id="@+id/textView_sigungu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="0dp"
        android:fontFamily="@font/applesdgothicneom"
        android:layout_marginRight="10dp"
        android:focusable="false"/>

    <TextView
        android:id="@+id/textView_tour_spot"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/applesdgothicneom"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="0dp"
        android:focusable="false"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="false"/>

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/likeoff"
        android:text="toggleButton"
        android:textOff=" "
        android:textOn=" "
        android:focusable="false"
        android:focusableInTouchMode="false" />


</LinearLayout>